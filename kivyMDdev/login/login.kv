<Screens>:
    LoginScreen:
    Home:
    CyberSec:
    Create_Account:
##########################################################################################
#
#LoginScreen SCREEN
#
#
#
#
#
##########################################################################################
<LoginScreen>
    name:"Login"
    MDCard:
        size_hint:None,None
        size:300,500
        orientation:"vertical"
        pos_hint:{"center_x":0.5,"center_y":0.5}
        elevation:10
        padding:20
        spacing:25

        MDLabel:
            id:welcome_label
            text:"KARU DEVELOPER PLATFORM"
            color:(1,1,0,1)
            halign:"center"
        MDTextFieldRound:
            id:user
            hint_text:"username"
            icon_right:"account"
            size_hint_x:None
            width:220
            pos_hint:{"center_x":0.5}
        MDTextFieldRound:
            id:password
            password:True
            hint_text:"password"
            icon_right:"eye-off"
            size_hint_x:None
            width:220
            pos_hint:{"center_x":0.5}
        MDRoundFlatButton:
            id:login
            text:"login"
            pos_hint:{"center_x":0.5}
            on_press:root.login()
        MDRoundFlatButton:
            id:create_account
            text:"create account"
            pos_hint:{"center_x":0.5}
            on_press:root.manager.current="Create_Account"
        MDLabel:
            size_hint_y:None
            height:20

##########################################################################################
#
#Create_Account Screen
#
#
#
#
#
##########################################################################################
<Create_Account>
    name:"Create_Account"
    MDCard:
        size_hint:None,None
        size:300,500
        orientation:"vertical"
        pos_hint:{"center_x":0.5,"center_y":0.5}
        elevation:10
        padding:20
        spacing:25

        MDLabel:
            id:welcome_label
            text:"KARU DEVELOPER PLATFORM"
            color:(1,1,0,1)
            halign:"center"
        MDLabel:
            id:create_account_label
            text:"CREATE ACCOUNT"
            color:(1,1,0,1)
            halign:"center"
        MDTextFieldRound:
            id:user
            hint_text:"username"
            icon_right:"account"
            size_hint_x:None
            width:220
            pos_hint:{"center_x":0.5}
        MDTextFieldRound:
            id:password
            password:True
            hint_text:"password"
            icon_right:"eye-off"
            size_hint_x:None
            width:220
            pos_hint:{"center_x":0.5}
        MDTextFieldRound:
            id:confirm_password
            password:True
            hint_text:"confirm password"
            icon_right:"eye-off"
            size_hint_x:None
            width:220
            pos_hint:{"center_x":0.5}
        MDTextFieldRound:
            id:email
            hint_text:"email"
            icon_right:"email"
            size_hint_x:None
            width:220
            pos_hint:{"center_x":0.5}
        MDTextFieldRound:
            id:programme
            hint_text:"programme"
            icon_right:"programme"
            size_hint_x:None
            width:220
            pos_hint:{"center_x":0.5}
        MDRoundFlatButton:
            id:create_account
            text:"create account"
            pos_hint:{"center_x":0.5}
            on_press:root.create_account()


